{
    "manifest_version": 3,
    "name": "英文悬浮翻译",
    "version": "1.2",
    "description": "划词翻译英文单词，支持生词表管理和Anki导出",
    "permissions": [
        "activeTab",
        "storage",
        "downloads"
    ],
    "host_permissions": [
        "https://translate.googleapis.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "英文悬浮翻译"
    }
}