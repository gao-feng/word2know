{
    "manifest_version": 3,
    "name": "英文悬浮翻译",
    "version": "1.2",
    "description": "划词翻译英文单词，支持生词表管理和Anki导出",
    "permissions": [
        "activeTab",
        "storage",
        "downloads"
    ],
    "host_permissions": [
        "https://translate.googleapis.com/*",
        "https://translate.google.com/*",
        "https://api.siliconflow.cn/*",
        "https://api.openai.com/*",
        "https://*.openai.azure.com/*",
        "https://api.deepseek.com/*",
        "https://api.moonshot.cn/*",
        "https://open.bigmodel.cn/*",
        "http://localhost:8765/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "siliconflow-translator.js",
                "openai-translator.js",
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "英文悬浮翻译"
    },
    "web_accessible_resources": [
        {
            "resources": ["anki-connect.js", "siliconflow-translator.js", "openai-translator.js"],
            "matches": ["<all_urls>"]
        }
    ]
}